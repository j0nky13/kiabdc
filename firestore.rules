rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function isAuthed() { return request.auth != null; }
    function isManager() {
      return isAuthed()
        && get(/databases/$(db)/documents/users/$(request.auth.uid)).data.role == "manager";
    }

    match /users/{uid} {
      allow read:  if isAuthed() && (uid == request.auth.uid || isManager());
      allow write: if isManager() || (isAuthed() && uid == request.auth.uid);
    }

    match /workers/{id} {
      allow read:  if isAuthed();
      allow write: if isManager();
    }

    match /sales/{id} {
      allow read:  if isManager() ||
                    (isAuthed() && resource.data.userId == request.auth.uid);
      allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isManager() ||
                            (isAuthed() && resource.data.userId == request.auth.uid);
    }

    match /settings/{docId} {
      allow read:  if isAuthed();
      allow write: if isManager();
    }
  }
}